<Window x:Class="Kanbanboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanbanboard"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="673" Width="1065">
    <Grid Margin="0,0,233,86">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="ProjectListContainer">
            <Grid.RowDefinitions>
                <RowDefinition Height="26*"/>
                <RowDefinition Height="26*"/>
                <RowDefinition Height="99*"/>
                <RowDefinition Height="368*"/>
                <RowDefinition Height="26*"/>
                <RowDefinition Height="26*"/>
            </Grid.RowDefinitions>
            <Button x:Name="AddSprintButton" Grid.Row="0" Grid.RowSpan="2" Content="Lisää sprintti+" Click="AddSprintButton_Click" Margin="0,0,0,26"/>
            <Button x:Name="UpdateProjectListButton" Content="Päivitä projektilista" Height="25" Click="UpdateProjectListButton_Click" Margin="0,25,0,2" Grid.RowSpan="2"/>
            <ListView x:Name="ProjectListing" Grid.Row="2" Margin="0,0,0,21" Grid.RowSpan="4" MouseDoubleClick="ProjectListing_MouseDoubleClick">
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="RightClickEdit" Header="Muokkaa" Click="RightClickEdit_Click"/>
                        <MenuItem x:Name="RightClickReport" Header="Näytä raportti" Click="RightClickReport_Click"/>
                        <MenuItem x:Name="RightClickDelete" Header="Poista projekti" Click="RightClickDelete_Click"/>
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>
            <ListView x:Name="SprintListing" Margin="881,12,-873,253" Grid.RowSpan="3" Grid.Row="1" MouseDoubleClick="SprintListing_MouseDoubleClick"/>
            <Button x:Name="AddUserButton" Content="Lisää käyttäjä" Grid.Row="4" Click="AddUserButton_Click" Margin="79,1,-1,20" Grid.RowSpan="2"/>
            <Button x:Name="AddProjectButton" Content="Lisää projekti" Grid.Row="4" Click="AddProjectButton_Click" Margin="0,1,78,20" Grid.RowSpan="2"/>
            <Button x:Name="AddUserStoryButton" Content="Uusi käyttäjätarina" Grid.Row="4" Click="AddUserStoryButton_Click" Margin="0,26,0,0" Grid.RowSpan="2"/>
        </Grid>

        <Grid Grid.Column="1" Margin="684,286,-221,-33">
            <TextBlock x:Name="SprintInfoBox" FontSize="12"  HorizontalAlignment="Left" Margin="10,170,0,0" TextWrapping="Wrap" Text="Sprintin Info:" FontWeight="Bold"/>
            <TextBlock x:Name="SeeSprintInfo" FontSize="12"  HorizontalAlignment="Left" Margin="100,170,0,0" TextWrapping="Wrap" Text=""/>
            <TextBlock x:Name="SprintStartDateBox" FontSize="12"  HorizontalAlignment="Left" Margin="10,240,0,0" TextWrapping="Wrap" Text="Aloitettu:" FontWeight="Bold"/>
            <TextBlock x:Name="SeeSprintStartDate" FontSize="12"  HorizontalAlignment="Left" Margin="100,240,0,0" TextWrapping="Wrap" Text=""/>
            <TextBlock x:Name="SprintEndDateBox" FontSize="12"  HorizontalAlignment="Left" Margin="10,270,0,0" TextWrapping="Wrap" Text="Lopetuspäivä:" FontWeight="Bold"/>
            <TextBlock x:Name="SeeSprintEndDate" FontSize="12"  HorizontalAlignment="Left" Margin="100,270,0,0" TextWrapping="Wrap" Text=""/>
        </Grid>

        <TabControl x:Name="SprinttiLaatikko" Margin="5,16,10,5" Grid.Column="1">
            <TabItem Header="Info">
                <Grid>
                    <TextBlock x:Name="TitleBox" FontSize="20"  HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Grid.ColumnSpan="2"/>
                    <TextBlock x:Name="InfoBox" FontSize="12" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="123" Width="360" Margin="60,42,0,0" Grid.Column="1"/>
                    <TextBlock x:Name="StartDateLabel" FontSize="12"  HorizontalAlignment="Left" Margin="10,170,0,0" TextWrapping="Wrap" Text="Aloitettu:" VerticalAlignment="Top" FontWeight="Bold" Grid.ColumnSpan="2"/>
                    <TextBlock x:Name="StartDateBox" FontSize="12"  HorizontalAlignment="Left" Margin="68,171,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150"/>
                    <TextBlock x:Name="EndDateLabel" FontSize="12"  HorizontalAlignment="Left" Margin="10,191,0,0" TextWrapping="Wrap" Text="Lopetuspäivä:" VerticalAlignment="Top" FontWeight="Bold" Grid.ColumnSpan="2"/>
                    <TextBlock x:Name="EndDateBox" FontSize="12"  HorizontalAlignment="Left" Margin="99,191,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150"/>
                    <TextBlock x:Name="TeamLabel" FontSize="12"  HorizontalAlignment="Left" Margin="10,212,0,0" TextWrapping="Wrap" Text="Tiimit:" VerticalAlignment="Top" FontWeight="Bold"/>
                    <ListBox x:Name="TeamBox" Margin="10,233,502,107"/>
                    <TextBlock x:Name="UsersLabel" FontSize="12"  HorizontalAlignment="Left" Margin="148,212,0,0" TextWrapping="Wrap" Text="Jäsenet:" VerticalAlignment="Top" FontWeight="Bold"/>
                    <ListBox x:Name="UsersBox" Margin="148,233,365,107">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem x:Name="RightClicUserEdit" Header="Muokkaa" Click="RightClickUserEdit_Click"/>
                                <MenuItem x:Name="RightClickUserReport" Header="Näytä raportti" Click="RightClickUserReport_Click"/>
                                <MenuItem x:Name="RightClickUserDelete" Header="Poista käyttäjä" Click="RightClickUserDelete_Click"/>
                                <MenuItem x:Name="RightClickShowProjects" Header="Käyttäjän projektit" Click="RightClickUserProjects_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>

                </Grid>
            </TabItem>
            <TabItem Header="Kanban" Height="20" VerticalAlignment="Top">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid x:Name="UserStoryGrid" Background="LightBlue">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="17*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="19*"/>
                        </Grid.RowDefinitions>
                        <ListView x:Name="UserStoryGridList" Background="Transparent" FontSize="18" HorizontalAlignment="Left" Width="161" BorderThickness="0" Grid.ColumnSpan="2" Grid.Row="1" Margin="4,5,6,5"/>
                        <Label HorizontalAlignment="Left" Grid.Column="1" Margin="28,0,0,472" Grid.RowSpan="2">Käyttäjätarinat</Label>
                    </Grid>
                    <Grid x:Name="TaskBacklogGrid" Background="LightCoral" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="17*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label HorizontalAlignment="Center" Grid.ColumnSpan="2">Aloittamatta</Label>
                        <Button x:Name="BacklogMoveTaskRightButton" FontSize="20" Margin="0,0,0,0" Content="→" Click="BacklogMoveTaskRightButton_Click" Grid.Row="2" Grid.ColumnSpan="2"/>

                        <Button x:Name="AddTaskButton" FontSize="32" FontWeight="Bold" Content="+" Grid.Column="1" Width="30" HorizontalAlignment="Left" Click="AddTaskButton_Click" Margin="50,0,0,10"/>
                        <ListBox x:Name="ToDoListBox" FontSize="18"  BorderThickness="0" Grid.Row="1" Grid.ColumnSpan="2" Background="LightCoral" Margin="4,5,6,35"/>

                    </Grid>
                    <Grid x:Name="TaskInProgressGrid" Background="LightYellow" Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="17*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Label HorizontalAlignment="Center">Työn alla</Label>
                        <Button x:Name="TaskInProgressMoveTaskLeftButton" FontSize="20"  Content="←" Grid.Row="1" Click="TaskInProgressMoveTaskLeftButton_Click" Margin="0,422,80,0" Grid.RowSpan="2"/>
                        <Button x:Name="TaskInProgressMoveTaskRightButton" FontSize="20" Content="→" Grid.Row="1" Click="TaskInProgressMoveTaskRightButton_Click" Margin="81,422,0,0" Grid.RowSpan="2"/>


                        <ListBox x:Name="TaskInProgressListBox" FontSize="18"  BorderThickness="0" Grid.Row="1" Background="LightYellow" Margin="8,6,5,35"/>
                    </Grid>
                    <Grid x:Name="TaskDoneGrid" Background="lightgreen" Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="17*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Label HorizontalAlignment="Center">Valmis</Label>
                        <Button x:Name="TaskDoneMoveTaskLeftButton" FontSize="20" Content="←" Grid.Row="3" Click="TaskDoneMoveTaskLeftButton_Click"/>
                        <ListBox x:Name="TaskDoneListBox" FontSize="18" BorderThickness="0" Grid.Row="1" Background="lightgreen" Margin="5,6,5,35"/>
                    </Grid>
                </Grid>

            </TabItem>
        </TabControl>













    </Grid>
</Window>

