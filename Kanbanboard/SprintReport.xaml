        <Label Grid.Row="1" Content="AloitusPvm" HorizontalAlignment="Left" Margin="74,0,0,0" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBlock x:Name="ProjectStartDateBox" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="188,0,0,0" TextWrapping="Wrap" Width="68" Height="18"/>
        <Label Grid.Row="2" Content="LopetusPvm" HorizontalAlignment="Left" Margin="74,0,0,0" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
