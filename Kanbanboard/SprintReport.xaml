        <Label Grid.Row="3" Content="Tieto sprintistä" HorizontalAlignment="Left" Margin="14,0,0,0" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBlock Grid.Row="3" x:Name="ProjectInfoBox" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Width="271" Height="48" Margin="110,0,0,0"/>
        <Label Content="Backlog" HorizontalAlignment="Left" Margin="46,0,0,0" Grid.Row="4" VerticalAlignment="Bottom"/>
        <Label Content="Kesken" HorizontalAlignment="Center" Margin="0,11,0,0" Grid.Row="4" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Label Content="Tehty" HorizontalAlignment="Right" Margin="0,11,51,0" Grid.Row="4" VerticalAlignment="Top" Grid.RowSpan="2"/>

    </Grid>
</Window>
