<Window x:Class="Kanbanboard.AddUserStory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanbanboard"
        mc:Ignorable="d"
        Title="AddUserStory" Height="450" Width="800">
    <Grid Margin="50" Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Content="Käyttäjätarinan nimi:"/>
        <TextBox x:Name="UserStoryNameInput" Grid.Row="2" Margin="5"/>
        <Label Grid.Row="3" Content="Kuvaus:"/>
        <TextBox x:Name="UserStoryDescriptionInput" Grid.Row="4" Margin="5"/>
        <Label Grid.Row="5" Content="Prioriteetti:"/>
        <ComboBox x:Name="PrioritySelector" Grid.Row="6" FontSize="14" Margin="0,4,0,6" Height="23" Padding="6,1,0,0">
            <ComboBoxItem Content="0" IsSelected="True" Background="LightGreen"/>
            <ComboBoxItem Content="1" Background="LightCoral"/>
            <ComboBoxItem Content="2" Background="Red"/>
        </ComboBox>
        <WrapPanel Grid.Row="7" HorizontalAlignment="Center">
            <Button x:Name="AddUserStoryButton" Width="50" Margin="5" Content="OK" IsDefault="True" Click="AddUserStoryButton_Click"/>
            <Button x:Name="CancelUserStoryButton" Width="50" Margin="5" Content="Cancel" IsCancel="True" Click="CancelUserStoryButton_Click"/>
        </WrapPanel>
    </Grid>
</Window>
